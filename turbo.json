{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "format": {
      "outputs": ["./node_modules/.cache/biome.log"],
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false
    }
  }
}
